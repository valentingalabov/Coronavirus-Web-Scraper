@model CovidStatisticsViewModel;
@{

    var overall = Model.Overall;
    var tested = overall.Tested;
    var confirmed = overall.Confirmed;
    var medical = confirmed.Medical.TotalByType;
    var active = overall.Active;
    var recovered = overall.Recovered;
    var deceased = overall.Deceased;
    var vaccinated = overall.Vaccinated;
}

<br />
<h1 class="text-center">
    Статистическа Информация към @*@Model.FormatedDate.ToString()*@.
</h1>

<hr />
<div class="row mask" style="
      background: linear-gradient(
        45deg,
        rgba(29, 236, 197, 0.7),
        rgba(91, 14, 214, 0.7) 100%
      )">

    <div class="col-lg-4 col-sm-6 border">
        <p class="stats-title">Направени тестове към @*@Model.FormatedDate*@</p>
        <p class="primary-digit">@tested.Total</p>
        <p class="secondary-title">за последното денонощие</p>
        <p class="secondary-digit" s>@tested.Last24</p>
    </div>
    <div class="col-lg-4 col-sm-6  border">
        <p class="stats-title">ПОТВЪРДЕНИ СЛУЧАЯ</p>
        <p class="text-light primary-digit">@confirmed.Total</p>
        <p class="secondary-title">активни случая</p>
        <p class="text-light secondary-digit">@active.Curent</p>
    </div>
    <div class="col-lg-4 col-sm-6 border">
        <p class="stats-title">ИЗЛЕКУВАНИ</p>
        <p class="primary-digit">@recovered.Total</p>
        <p class="secondary-title">за последното денонощие</p>
        <p class="secondary-digit">@recovered.Last</p>
    </div>
    <div class="col-lg-4 col-sm-6 border">
        <p class="stats-title">ХОСПИТАЛИЗИРАНИ</p>
        <p class="text-warning primary-digit">@active.CurrentByType.Hospitalized</p>
        <p class="secondary-title">в интензивно отделение</p>
        <p class="text-warning secondary-digit">@active.CurrentByType.Icu</p>
    </div>
    <div class="col-lg-4 col-sm-6 border">
        <p class="stats-title">ПОЧИНАЛИ</p>
        <p class="text-danger primary-digit">@deceased.Total</p>
        <p class="secondary-title">за последното денонощие</p>
        <p class="text-danger secondary-digit">@deceased.Last</p>
    </div>
    <div class="col-lg-4 col-sm-6 border">
        <p class="stats-title">ОБЩО ПОСТАВЕНИ ДОЗИ</p>
        <p class="text-primary primary-digit">@vaccinated.Total</p>
        <p class="secondary-title">за последното денонощие</p>
        <p class="text-primary secondary-digit">@vaccinated.Last</p>
    </div>
</div>

<br />
<hr />

<div class="row">
    <div class="col-lg-4 col-sm-6">
        <div class="h-heading">
            <h4>
                Потвърдени случаи за Медицински персонал
            </h4>
        </div>
        <table class="table table-hover table-dark">
            <thead>
                <tr class="bg-info">
                    <th>Тип</th>
                    <th>Брой</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Лекари</td>
                    <td>@medical.Doctror</td>
                </tr>
                <tr>
                    <td>Медицински сестри</td>
                    <td>@medical.Nurces</td>
                </tr>
                <tr>
                    <td>Санитари</td>
                    <td>@medical.Paramedics_1</td>
                </tr>
                <tr>
                    <td>Фелдшери</td>
                    <td>@medical.Paramedics_2</td>
                </tr>
                <tr>
                    <td>Други</td>
                    <td>@medical.Others</td>
                </tr>
                <tr>
                    <td>Общо</td>
                    <td>@confirmed.Medical.Total</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-lg-4 col-sm-6">
        <div class="h-heading">
            <h4>
                Лабораторни изследвания
            </h4>
        </div>
        <table class="table table-hover table-dark">
            <thead>

                <tr class="bg-info">
                    <th>Тип</th>
                    <th>Общо</th>
                    <th>Нови</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>RT PCR</td>
                    <td>@tested.TotalByType.PCR</td>
                    <td>@tested.TotalByType24.PCR</td>
                </tr>
                <tr>
                    <td>Бърз тест за антигени</td>
                    <td>@tested.TotalByType.Antigen</td>
                    <td>@tested.TotalByType24.Antigen</td>
                </tr>
                <tr>
                    <td>Общо</td>
                    <td>@tested.Total</td>
                    <td>@tested.Last24</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-lg-4 col-sm-6">
        <div class="h-heading">
            <h4>
                Потвърдени случаи според тип на лабораторно изследване
            </h4>
        </div>
        <table class="table table-hover table-dark">
            <thead>
                <tr class="bg-info">
                    <th>Тип</th>
                    <th>Общо</th>
                    <th>Нови</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>RT PCR</td>
                    <td>@confirmed.TotalByType.PCR</td>
                    <td>@confirmed.TotalByType24.PCR</td>
                </tr>
                <tr>
                    <td>Бърз тест за антигени</td>
                    <td>@confirmed.TotalByType.Antigen</td>
                    <td>@confirmed.TotalByType24.Antigen</td>
                </tr>
                <tr>
                    <td>Общо</td>
                    <td>@confirmed.Total</td>
                    <td>@confirmed.Last24</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
