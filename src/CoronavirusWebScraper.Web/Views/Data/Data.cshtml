@{
    ViewData["Title"] = "Статистически календар";
    var months = new string[] { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };
}


<div>
    <div class="container col-md-12 col-sm-6 text-center">
        <h3 id="monthAndYear"></h3>
        <div class="mx-lg-4">
            <button class="btn btn-secondary col-md-4" id="previous">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="25" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                    <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1z" />
                </svg>
                Предишен
            </button>
            <button class="btn btn-secondary col-md-4" id="next">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="25" fill="currentColor" class="bi bi-arrow-right-square-fill" viewBox="0 0 16 16">
                    <path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v12zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1z" />
                </svg>
                Следващ
            </button>
        </div>
        <hr />
        <div class="container-fluid">


            <table class="table border blue-mask">
                <thead>
                    <tr class="calendar-heading">
                        <th>Mon</th>
                        <th>Tue</th>
                        <th>Wed</th>
                        <th>Thu</th>
                        <th>Fri</th>
                        <th>Sat</th>
                        <th>Sun</th>
                    </tr>
                </thead>

                <tbody id="calendar-body">
                </tbody>
            </table>
        </div>

        <button class="btn btn-secondary col-sm-4" id="current">Отиди на текущата дата</button>
        <hr />
        <form class="row">
            <label class="col-md-2" for="month">Отиди на:</label>
            <select class="col-md-4" name="month" id="month">
                @for (int i = 0; i < months.Length; i++)
                {
                    <option value=@i>@months[i]</option>
                }
            </select>
            <label for="year"></label><select class="col-md-4" name="year" id="year">
                @for (int i = 2020; i < 2030; i++)
                {
                    <option value=@i>@i</option>
                }
            </select>
        </form>
    </div>
</div>

@section scripts {
    <script type="module" src="~/js/calendar.js"></script>
}