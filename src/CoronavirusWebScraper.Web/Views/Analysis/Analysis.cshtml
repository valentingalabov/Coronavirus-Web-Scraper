@{
    ViewData["Title"] = "Анализ";

}

<div class="text-center">
    <h1>Анализ</h1>

    <label class="col-md-2">Избери графика:</label>
    <select class="col-md-4" id="chart-select">
        <option value=0>Изберете графика</option>
        <option value=1>Активни / Хоспитализирани</option>
        <option value=2>Хоспитализирани / Интензивно отделение</option>
        <option value=3>Заразени / Тествани</option>
    </select>
    <hr />
    <div class="col-md-12 col-md-4">
        <div id="charts" style="width: 100%; height: 400px;"></div>
    </div>

</div>

@section scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="module" src="~/js/analysis.js"></script>

}

